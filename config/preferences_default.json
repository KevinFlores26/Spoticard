  "card_b_margin": 0,
  "card_spacing": 20,

  "theme": "adaptive",
  "only_custom_color": false,
  "custom_color": "#1ed760",

  "image_size": 64,
  "image_radius": 5,
  "title_font_size": 24,
  "title_font": "'Tsunagi Gothic Black', 'Filson Pro', Helvetica",
  "artist_font_size": 12,
  "artist_font": "'Tsunagi Gothic Black', 'Filson Pro', Helvetica",

  "total_card_dur": 6000,
