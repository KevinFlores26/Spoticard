{
  "media_player": "fb2k",
  "nowplaying_txt_path": "foobar2000-v2\\nowplaying.txt",

  "hide_on_click": true,
  "shortcuts": true,
  "visibility_shortcut": "ctrl+alt+1",
  "theme_shortcut": "ctrl+alt+2",
  "play_pause_shortcut": "ctrl+alt+3",
  "previous_shortcut": "ctrl+alt+4",
  "next_shortcut": "ctrl+alt+5",
  "order_shortcut": "ctrl+alt+6",
  "repeat_shortcut": "ctrl+alt+7",
  "volume_up_shortcut": "ctrl+alt+=",
  "volume_down_shortcut": "ctrl+alt+-",
